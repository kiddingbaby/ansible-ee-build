{
    "name": "Ansible EE K3s",
    "build": {
        "dockerfile": "../Dockerfile",
        "context": "..",
        "target": "dev"
    },
    "runArgs": [
        "--network=host"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "redhat.ansible",
                "ms-python.python",
                "ms-azuretools.vscode-docker"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/opt/venv/bin/python",
                "ansible.python.interpreterPath": "/opt/venv/bin/python"
            }
        }
    },
    "mounts": [
        "source=/run/containerd/containerd.sock,target=/run/containerd/containerd.sock,type=bind",
        "source=/run/buildkit/buildkitd.sock,target=/run/buildkit/buildkitd.sock,type=bind",
        "source=/tmp/ssh-agent.sock,target=/ssh-agent,type=bind"
    ],
    "remoteEnv": {
        "CONTAINERD_ADDRESS": "/run/containerd/containerd.sock",
        "BUILDKIT_HOST": "unix:///run/buildkit/buildkitd.sock",
        "SSH_AUTH_SOCK": "/ssh-agent"
    },
    "postCreateCommand": "ansible --version",
    "remoteUser": "ansible"
}