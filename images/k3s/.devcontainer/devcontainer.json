{
    "name": "Ansible EE K3s",
    // "build": {
    //     "dockerfile": "../Dockerfile",
    //     "context": ".."
    // },
    "image": "ghcr.io/kiddingbaby/ansible-k3s:dev",
    "runArgs": [
        "--network=host"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "redhat.ansible",
                "ms-python.python",
                "ms-azuretools.vscode-docker"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/opt/venv/bin/python",
                "ansible.python.interpreterPath": "/opt/venv/bin/python"
            }
        }
    },
    "mounts": [
        "source=/tmp/ssh-agent.sock,target=/ssh-agent,type=bind",
        "source=${localWorkspaceFolder}/tests/smoke-test/inventory,target=/runner/inventory,type=bind,consistency=cached",
        "source=${localWorkspaceFolder}/tests/smoke-test/project,target=/runner/project,type=bind,consistency=cached",
        "source=${localWorkspaceFolder}/tests/smoke-test/offline,target=/runner/offline,type=bind,consistency=cached"
    ],
    "remoteEnv": {
        "SSH_AUTH_SOCK": "/ssh-agent"
    },
    "postCreateCommand": "ansible --version",
    "remoteUser": "ansible"
}